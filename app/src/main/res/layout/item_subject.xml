<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size8dp"
    android:layout_marginBottom="@dimen/size8dp"
    android:layout_marginRight="@dimen/size12dp"
    android:layout_marginLeft="@dimen/size12dp"
    app:cardBackgroundColor="?attr/backgroundWhite2"
    app:cardCornerRadius="@dimen/size18dp">

    <LinearLayout
        android:padding="@dimen/size10dp"
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_subject"
            android:layout_width="@dimen/size100dp"
            android:layout_height="@dimen/size100dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txt_namesubject"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#868686"
            android:textSize="@dimen/size20sp"
            android:textStyle="bold" />
    </LinearLayout>


</androidx.cardview.widget.CardView>