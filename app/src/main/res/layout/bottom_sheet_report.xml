<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/backgroundWhite">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose_contact"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="2dp"
        android:layout_marginLeft="@dimen/size24dp"
        android:layout_marginRight="@dimen/size24dp"
        android:layout_marginTop="@dimen/size20dp"
        android:layout_marginBottom="@dimen/size16dp"
        android:textSize="@dimen/size15sp"
        android:fontFamily="@font/svn_avo"
        android:textColor="?attr/colorTextBlack"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/size24dp"
        android:layout_marginRight="@dimen/size24dp"
        android:layout_marginBottom="@dimen/size24dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/size8dp"
            android:layout_marginRight="@dimen/size8dp"
            android:layout_marginTop="@dimen/size4dp"
            android:layout_marginBottom="@dimen/size4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_gmail"
                    android:layout_marginLeft="@dimen/size6dp"
                    android:layout_marginRight="@dimen/size6dp"
                    android:layout_marginTop="1dp"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:maxLines="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/send_email"
                    android:fontFamily="@font/svn_avo_bold"
                    android:layout_marginLeft="@dimen/size6dp"
                    android:layout_marginRight="@dimen/size6dp"
                    android:textColor="?attr/colorTextBlack"
                    android:textSize="@dimen/size13sp"
                    android:paddingTop="@dimen/size10dp"
                    android:paddingBottom="@dimen/size12dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_facebook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/size8dp"
            android:layout_marginRight="@dimen/size8dp"
            android:layout_marginTop="@dimen/size4dp"
            android:layout_marginBottom="@dimen/size4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_messenger"
                    android:layout_marginLeft="@dimen/size6dp"
                    android:layout_marginRight="@dimen/size6dp"
                    android:layout_marginTop="1dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/messenger"
                    android:fontFamily="@font/svn_avo_bold"
                    android:textColor="?attr/colorTextBlack"
                    android:layout_marginLeft="@dimen/size6dp"
                    android:layout_marginRight="@dimen/size6dp"
                    android:textSize="@dimen/size13sp"
                    android:paddingTop="@dimen/size10dp"
                    android:paddingBottom="@dimen/size12dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>