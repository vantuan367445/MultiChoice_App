<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="@dimen/size12dp"
    android:layout_marginRight="@dimen/size12dp"
    app:cardBackgroundColor="?attr/backgroundWhite"
    app:cardCornerRadius="@dimen/size10dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="@dimen/size8dp"
            android:layout_marginRight="@dimen/size8dp"
            android:layout_marginLeft="@dimen/size8dp"
            android:id="@+id/txt_nameDeThi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size5dp"
            android:textColor="?attr/colorTextBlack"
            android:textSize="@dimen/size16sp" />

        <RelativeLayout
            android:layout_marginRight="@dimen/size8dp"
            android:layout_marginLeft="@dimen/size8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/size5dp"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="@dimen/size16dp"
                    android:layout_height="@dimen/size16dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_copyright"
                    tools:ignore="ContentDescription"
                    app:tint="?attr/backgroundBlack" />

                <TextView
                    android:textColor="?attr/colorTextBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size5dp"
                    android:text="@string/e_thunder"
                    android:textSize="@dimen/size12sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginRight="@dimen/size8dp"
            android:layout_marginLeft="@dimen/size8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/size5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/txt_socauhoiDeThi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorTextBlack" />

                <TextView
                    android:id="@+id/txt_timelambaiDeThi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size50dp"
                    android:textColor="@color/colorRed2" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/line_start"
            android:background="?attr/selectableItemBackground"
            android:paddingLeft="@dimen/size8dp"
            android:paddingRight="@dimen/size8dp"
            android:layout_marginTop="@dimen/size12dp"
            android:layout_marginBottom="@dimen/size16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginEnd="@dimen/size40dp"
                android:id="@+id/line_continue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_seeResult"
                    android:background="?attr/selectableItemBackground"
                    android:textSize="@dimen/size14sp"
                    android:fontFamily="@font/svn_avo_bold"
                    android:textColor="@color/colorWhite"
                    android:paddingRight="@dimen/size12dp"
                    android:paddingLeft="@dimen/size12dp"
                    android:paddingBottom="@dimen/size6dp"
                    android:paddingTop="@dimen/size6dp"
                    android:text="@string/text_continue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="@dimen/size40dp"
                android:id="@+id/line_txt_remake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:background="?attr/selectableItemBackground"
                    android:textSize="@dimen/size14sp"
                    android:fontFamily="@font/svn_avo_bold"
                    android:textColor="?attr/colorTextBlack"
                    android:paddingRight="@dimen/size12dp"
                    android:paddingLeft="@dimen/size12dp"
                    android:paddingBottom="@dimen/size6dp"
                    android:paddingTop="@dimen/size6dp"
                    android:text="@string/remake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>